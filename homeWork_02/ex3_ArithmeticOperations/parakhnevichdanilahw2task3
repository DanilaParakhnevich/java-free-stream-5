import java.util.Scanner;
public class MathOperationsDemo {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.println("Введите 1 ,если хотите получить сумму");
        System.out.println("Введите 2 ,если хотите получить разность");
        System.out.println("Введите 3 ,если хотите получить произведение");
        System.out.println("Введите 4 ,если хотите получить частное");
        int i;
        i = scan.nextInt();
        System.out.println("Введите 1 переменную");
        int a = scan.nextInt();
        System.out.println("Введите 2 переменную");
        int b = scan.nextInt();

        switch (i) {
            case 1:
                System.out.println(a + b);
                break;
            case 2:
                System.out.println(a - b);
                break;
            case 3:
                System.out.println(a * b);
                break;
            case 4:
                double h;
                h = (double) a;
                double j;
                j = (double) b;

                System.out.println(h / j);
                break;
            default:
                System.out.println("Повторите операцию и введите число 1,2,3 или 4");
        }

    }
}
